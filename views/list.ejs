<%- include('header') -%>
    <div class="box heading">
      <h1><%= listTitle %></h1>
    </div>
    <div class="box">
      <% newEntries.forEach(entry => { %>
      <form action="/delete" method="post">
        <div class="item">
          <input type="checkbox" name="checkbox" value=<%= entry._id %> onChange="this.form.submit()"></input>
          <p><%=entry.text%></p>
        </div>
        <input type="hidden" name="listName" value="<%= listTitle %>"></input>
      </form>
      <% }); %>
    <form action="/" method="post">
      <input type="text" name="entry" placeholder="New Entry" autocomplete="off"></input>
      <button type="submit" name="list" value="<%= listTitle %>">+</button>
    </form>
    </div>
    <div class="box">
      <form action="/search" method="post">
        <input id="search" type="text" name="search" placeholder="Create or go to a custom list!" autocomplete="off"></input>
      </form>
    </div>
<%- include('footer') -%>